---
import "../style/styles.css";
const { text } = Astro.props;
const { className } = Astro.props;
---

<section class={className}>
  <p>{text}</p>
</section>

<style>
  /* mobile */
  .program_light {
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    border-radius: 3.75rem;
    position: relative;
    background-color: #e4ff95;

    padding: 0.1875rem 0.625rem;
    gap: 0.3125rem;
    left: 0.6875rem;
    top: 2rem;
  }
  .program {
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    border-radius: 3.75rem;
    position: relative;
    background-color: var(--green);

    padding: 0.1875rem 0.625rem;
    gap: 0.3125rem;
    left: 0.6875rem;
    top: 2rem;
  }
  .news {
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    border-radius: 3.75rem;
    position: relative;
    background-color: #e4ff95;

    padding: 0.1875rem 0.625rem;
    gap: 0.3125rem;
    margin-left: 15px;
    margin-top: 15px;
    margin-right: 15px;
  }
  .newsSW {
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    border-radius: 3.75rem;
    position: relative;
    background-color: var(--green);

    padding: 0.1875rem 0.625rem;
    gap: 0.3125rem;
  }
  .newsSW_light {
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    border-radius: 3.75rem;
    position: relative;
    background-color: #e4ff95;

    /* border-color: var(--green); */
    /* border-style: solid;
    border-width: 1px; */

    padding: 0.1875rem 0.625rem;
    gap: 0.3125rem;
  }

  /* desktop */
  @media (min-width: 800px) {
    .program,
    .program_light {
      padding: 0.1875rem 0.9375rem;

      gap: 0.625rem;
      flex-shrink: 0;
      left: 0.6875rem;
      top: 2.5rem;
    }
  }
</style>
